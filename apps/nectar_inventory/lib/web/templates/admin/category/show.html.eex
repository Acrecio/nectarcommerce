<h2>Show category</h2>

<ul>
  <li>
    <strong>Name:</strong>
    <%= if @category.parent do %>
      <%= @category.parent.name %> -> <%= @category.name %>
    <% else %>
      <%= @category.name %>
    <% end %>
  </li>
</ul>

<%= link "Edit", to: NectarRoutes.admin_category_path(@conn, :edit, @category) %>
<%= link "Back", to: NectarRoutes.admin_category_path(@conn, :index) %>
